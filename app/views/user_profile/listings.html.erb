<h1>All Listings</h1>

<% if @user.listings.any? %>
  <% @user.listings.each do |listing| %>

    <div style="border: 1px solid black">
      <%= image_tag listing.image, style:"float:left;" if listing.image.attached? %>
      <ul>
        <li><strong><%= link_to listing.title, listing_path(listing) %></strong></li>
        <li><strong><%= number_to_currency(listing.price) %></strong></li>
        <li><strong>Platform:</strong> <%= listing.platform.manufacturer %> <%= listing.platform.name %></li>
        <li><strong>Condition:</strong> <%= listing.condition.humanize %></li>
        <li>Posted by <%= link_to listing.user.username, user_profile_path(listing.user) %> at <%= listing.created_at %></li>
      </ul>
    </div>

  <% end %>

<% else %>

  This user has no listings.

<% end %>