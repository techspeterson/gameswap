<h1>Edit Profile</h1>

<%= form_with(model: current_user.user_detail, local: true) do |form| %>

  <div class="field">
    <%= form.label :bio %>
    <%= form.text_area :bio %>
  </div>

  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>

<p>
  <%= link_to "Back", user_path(current_user) %>
<p>