<%= form_with(model: address, url: url, local: true) do |form| %>

  <% if address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
      <% address.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :address_line_1, "Address line 1" %>
    <%= form.text_field :address_line_1, placeholder: "address line 1" %>
  </div>

  <div class="field">
    <%= form.label :address_line_2 %>
    <%= form.text_field :address_line_2, placeholder: "address line 2" %>
  </div>

  <div class="field">
    <%= form.label :city, "City" %>
    <%= form.text_field :city, placeholder: "city" %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state, placeholder: "state" %>
  </div>

  <div class="field">
    <%= form.label :country_id %>
    <%= form.select :country_id, options_for_select(Country.all.collect {|u| [u.name, u.id]}, selected: address.country_id) %>
  </div>

  <div class="field">
    <%= form.label :postcode, "Postcode" %>
    <%= form.text_field :postcode, placeholder: "postcode" %>
  </div>

  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>